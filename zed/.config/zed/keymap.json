[
  {
    "bindings": {
      "cmd-1": "workspace::ToggleLeftDock",
      "cmd-2": "workspace::ToggleBottomDock",
      "cmd-3": "workspace::ToggleRightDock",
      "cmd-t": "terminal_panel::ToggleFocus",
      "cmd-shift-n": "task::Spawn",
      "cmd-shift-r": "task::Rerun",
    },
  },
  {
    "context": "Editor && vim_mode == insert && !VimWaiting && !menu",
    "bindings": {
      //     "j k": "vim::NormalBefore",
      "ctrl-k": "editor::ShowSignatureHelp",
      "ctrl-e": "editor::MoveToEndOfLine",
    },
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      //lsp
      "g K": "editor::ShowSignatureHelp",
      "g y": "editor::GoToTypeDefinition",
      "g i": "editor::GoToImplementation",
      "g d": "editor::GoToDefinition",
      "g D": "editor::GoToDeclaration",
      "g r": "editor::FindAllReferences",
      "K": "editor::Hover",
      // search
      "space f o": "outline::Toggle",
      "space f f": "file_finder::Toggle",
      "space f p": "projects::OpenRecent",
      // mover cursor between window
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      //code
      "space c a": "editor::ToggleCodeActions",
      "space c f": "editor::Format",
      "space c r": "editor::Rename",
      "]]": "editor::GoToNextReference",
      "[[": "editor::GoToPreviousReference",
      // git
      "space g [": "editor::GoToPreviousHunk",
      "space g ]": "editor::GoToHunk",
      "space g b": "git::Blame",
      "space g d": "editor::ToggleSelectedDiffHunks",
      "space g r": "git::Restore",
      "space [ g": "editor::GoToPreviousHunk",
      "space ] g": "editor::GoToHunk",
      // error
      "space ] e": "editor::GoToDiagnostic",
      "space [ e": "editor::GoToPreviousDiagnostic",
      // files
      "space e": "project_panel::ToggleFocus",
      // markdown
      "space m o": "markdown::OpenPreview",
      "space m p": "markdown::OpenPreviewToTheSide",
      // buffers
      "[ b": "pane::ActivatePreviousItem",
      "] b": "pane::ActivateNextItem",

      "g h": "editor::MoveToBeginningOfLine",
      "g l": "editor::MoveToEndOfLine",
      "g b": "pane::GoBack",
    },
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "j": "menu::SelectNext",
      "k": "menu::SelectPrevious",
      "a": "project_panel::NewFile",
      "A": "project_panel::NewDirectory",
      "c": "project_panel::Copy",
      "d": "project_panel::Delete",
      "p": "project_panel::Paste",
      "r": "project_panel::Rename",
      "x": "project_panel::Cut",
      "y p": "workspace::CopyPath",
      "y r": "workspace::CopyRelativePath",
      "space e": "project_panel::ToggleFocus",
    },
  },
  {
    "context": "Dock || Terminal || Editor",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
    },
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "terminal_panel::ToggleFocus",
    },
  },
]
