{
  "auto_update": false,
  // Auto-install extensions
  "auto_install_extensions": {
    "basher": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "html": true,
    "emmet": true,
    "lua": true,
    "toml": true,
    "xml": true,
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "proxy": "http://127.0.0.1:6152",

  // =========================
  // theme
  // =========================
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha",
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha",
  },
  "base_keymap": "VSCode",

  // =========================
  // Font
  // =========================
  "ui_font_family": "BerkeleyMono Nerd Font",
  "ui_font_size": 14.0,
  "ui_font_weight": 300.0,
  "buffer_line_height": { "custom": 1.5 },
  "buffer_font_family": "BerkeleyMono Nerd Font",
  "buffer_font_size": 14.0,
  "buffer_font_weight": 300,
  "buffer_font_features": { "calt": false },

  // =========================
  // Editor
  // =========================
  "always_treat_brackets_as_autoclosed": true,
  "auto_signature_help": false,
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 2,
      "max_severity": "warning",
    },
  },
  "hide_mouse": "on_typing_and_movement",
  "inline_code_actions": false,
  "middle_click_paste": false,
  "vertical_scroll_margin": 0,
  "restore_on_startup": "last_session",
  "restore_on_file_reopen": true,
  "autosave": "on_window_change",
  "wrap_guides": [90],
  "show_edit_predictions": false, // 全局不自动显示预测，使用 subtle 模式
  "current_line_highlight": "none",
  "tab_size": 4,

  // =========================
  // Vim
  // =========================
  "vim_mode": true,
  "cursor_blink": false,
  "relative_line_numbers": "enabled",
  "scrollbar": {
    "show": "never",
  },

  // =========================
  // Terminal
  // =========================
  "terminal": {
    "font_family": "BerkeleyMono Nerd Font",
    "font_size": 13.0,
    "line_height": "standard",
    "dock": "bottom",
    "copy_on_select": true,
    "env": {
      "EDITOR": "zed --wait",
    },
    "toolbar": {
      "breadcrumbs": false,
    },
  },

  // =========================
  // UI
  // =========================
  "colorize_brackets": true,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": true,
  },
  "git": {
    "inline_blame": { "enabled": false },
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all",
  },
  "project_panel": {
    "entry_spacing": "standard",
  },

  "multi_cursor_modifier": "alt",
  "snippet_sort_order": "inline",
  "show_completions_on_input": true,
  "inlay_hints": {
    "enabled": true,
    "show_other_hints": false,
    "show_parameter_hints": false,
    "show_type_hints": false,
    "show_value_hints": true,
  },

  // =========================
  // AI
  // =========================
  "features": {
    "edit_prediction_provider": "zed", // 使用 Zed 自己的预测模型 (Zeta)
  },
  "edit_predictions": {
    "mode": "subtle", // 按住 Alt/Option 才显示预测，避免干扰
    "enabled_in_text_threads": false,
  },
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": "ctx7sk-5e9fa061-e966-413f-b425-debfdc8f67d0",
      },
    },
  },
  "agent_servers": {
    "Qwen Code": {
      "type": "custom",
      "command": "qwen",
      "args": ["--experimental-acp"],
      "env": {},
    },
  },
  "agent": {
    "always_allow_tool_actions": true,
    "play_sound_when_agent_done": true,
    "default_profile": "write",
    "default_model": {
      "provider": "deepseek",
      "model": "deepseek-reasoner",
    },
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5",
    },
  },
  // 自定义模型配置 (Qwen)
  "language_models": {
    "openai_compatible": {
      "Qwen": {
        "api_url": "https://portal.qwen.ai/v1",
        "available_models": [
          {
            "name": "qwen3-coder-plus",
            "max_tokens": 65536,
            "max_output_tokens": 65536,
            "max_completion_tokens": 1000000,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
        ],
      },
    },
  },

  // =========================
  // Formatting & LSP
  // =========================
  "format_on_save": "on",
  "formatter": "prettier",
  "prettier": {
    "semi": false,
    "allowed": true,
    "tabWidth": 2,
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "singleQuote": true,
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          // 保持为空，配合 ruff.toml 实现“仅格式化，无 Lint 报错”
        },
      },
    },
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy",
        },
        "imports": {
          "merge": { "glob": false },
          "granularity": {
            "enforce": true,
            "group": "module",
          },
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true,
          },
          "closureReturnTypeHints": {
            "enable": "always",
          },
        },
      },
    },
  },

  // =========================
  // Language
  // =========================
  "languages": {
    "Python": {
      "language_servers": ["!basedpyright", "ty", "ruff"],
      "formatter": [
        { "code_action": "source.organizeImports.ruff" },
        { "code_action": "source.fixAll.ruff" },
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
    "Lua": {
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": ["--stdin-filepath", "{buffer_path}", "-"],
        },
      },
    },
    "Rust": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "rustfmt",
          "arguments": [],
        },
      },
    },
    "TypeScript": {
      "formatter": "prettier",
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_type_hints": true,
      },
    },
    "JavaScript": {
      "formatter": "prettier",
      "tab_size": 2,
    },
    "JSONC": {
      "formatter": "prettier",
      "tab_size": 2,
    },
    "JSON": {
      "formatter": "prettier",
      "tab_size": 2,
    },
    "HTML": {
      "formatter": "prettier",
      "tab_size": 2,
    },
    "CSS": {
      "formatter": "prettier",
    },
  },

  // =========================
  // 文件过滤 (Exclusions)
  // =========================
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules",
  ],
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSONC": [
      "**/.zed/**/*.json",
      "**/zed/**/*.json",
      "**/Zed/**/*.json",
      "**/.vscode/**/*.json",
      "tsconfig*.json",
      "*.code-snippets",
    ],
    "Shell Script": [".env.*"],
  },
}
